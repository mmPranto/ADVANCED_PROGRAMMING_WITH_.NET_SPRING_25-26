@{
    // var deg1 = "SSC";
    // var res1 = 3.40;
    var degrees = new string[] { "SSC", "HSC","BBA" };
    var results = new double[] { 4.56, 5.00,3.90 };
}
@* <h1>Name: @ViewBag.Name</h1>
