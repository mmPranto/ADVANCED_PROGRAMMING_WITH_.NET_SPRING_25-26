<h1>Name: @ViewData["Name"]</h1>
<h1>Id: @ViewData["Id"]</h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>SL</th>
            <th>Degree</th>
            <th>Result</th>
            <th>Flags</th>
        </tr>
    </thead>
    <tbody>
        @for(int i=0;i<degrees.Length;i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@(degrees[i])</td>
                <td>@(results[i])</td>
                @if (results[i] == 5.00)
                {
                    <td><span>Congrats</span></td>
                }
                else
                {
                    <td><span>BLNT</span></td>
                }
            </tr>
        }
    </tbody>
</table>


